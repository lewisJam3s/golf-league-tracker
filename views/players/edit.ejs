<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="page-container">

  <h1 class="mb-4">Edit Player</h1>

  <form 
    action="/players/<%= player._id %>?_method=PUT" 
    method="POST" 
    class="form-narrow"
  >

    <div class="mb-3">
      <label class="form-label fw-semibold">Name</label>
      <input 
        type="text" 
        name="name" 
        class="form-control"
        value="<%= player.name %>"
        required>
    </div>

    <div class="mb-4">
      <label class="form-label fw-semibold">Email</label>
      <input 
        type="email" 
        name="email" 
        class="form-control"
        value="<%= player.email %>">
    </div>

    <button class="btn btn-success me-2">Save Changes</button>
    <a href="/players/<%= player._id %>" class="btn btn-secondary">Cancel</a>

  </form>

</div>

