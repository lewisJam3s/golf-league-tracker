
<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="page-container">

  <h1 class="mb-4">Players</h1>

  <a href="/players/new" class="btn btn-success mb-4">Add Player</a>

  <div class="card">
    <table class="table table-striped mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>

      <tbody>
        <% if (players.length === 0) { %>
          <tr>
            <td colspan="2" class="text-center py-3 text-muted">
              No players yet â€” add one to get started!
            </td>
          </tr>
        <% } %>

        <% players.forEach(player => { %>
          <tr>
            <td>
              <a href="/players/<%= player._id %>" class="text-decoration-none fw-semibold">
                <%= player.name %>
              </a>
            </td>
            <td><%= player.email || '-' %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

</div>

<%- include('../partials/footer') %>

